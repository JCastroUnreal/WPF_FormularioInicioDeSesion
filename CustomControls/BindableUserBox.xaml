<UserControl x:Class="WPF_FormularioInicioDeSesion.CustomControls.BindableUserBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_FormularioInicioDeSesion.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <TextBox x:Name="txtUser"
             FontSize="13"
             FontWeight="Medium"
             FontFamily="Montserrat"
             Foreground="White"
             CaretBrush="LightGray"
             BorderBrush="DarkGray"
             BorderThickness="0,0,0,1"
             VerticalContentAlignment="Center"
             Padding="30,0,0,0">
        <TextBox.Background>
            <ImageBrush ImageSource="/WPF_FormularioInicioDeSesion;component/Images/user-solid.png"
                        Stretch="Uniform"
                        AlignmentX="Left" />
        </TextBox.Background>
    </TextBox>
</UserControl>
